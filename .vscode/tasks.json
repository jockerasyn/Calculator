{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++", /*or path to g++ compiler*/
            "args": [
                "-fdiagnostics-color=always",
                "--include-directory=include/",
                "-g",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/include/Digit/*.cpp",
                "${workspaceFolder}/include/Animal/*.cpp",
                "${workspaceFolder}/include/Threads/*.cpp",
                "-o",
                "${workspaceFolder}/test.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}